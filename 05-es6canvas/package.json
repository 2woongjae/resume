{
  "name": "es6canvas",
  "scripts": {
    "build": "webpack",
    "dev": "webpack-dev-server",
    "test": "xo"
  },
  "author": "Woongjae Lee <@2woongjae>",
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "easing": "0.0.4",
    "jquery": "^2.2.3",
    "socket.io-client": "^1.4.6",
    "stackblur-canvas": "^1.2.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "worker-loader": "^0.7.0",
    "xo": "^0.13.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "space": 2,
    "rules": {
      "padded-blocks": [
        2,
        "always"
      ],
      "no-lonely-if": 0,
      "curly": 0,
      "linebreak-style": [
        "error",
        "windows"
      ],
      "no-unused-vars": [
        0
      ]
    },
    "ignores": [
      "bin/**",
      "bld/**",
      "css/**",
      "images/**",
      "js/**",
      "lib/**",
      "WinJS/**",
      "bundle.js",
      "webpack.config.js"
    ]
  }
}
